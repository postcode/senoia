<div class="row plan-state">
  <div class="large-12 columns">
    <ul class="breadcrumb">
      <li><a href="javascript:void(0);" class="review <%= @plan.draft? ? 'active' : 'none' %>">Draft</a></li>
      <li><a href="javascript:void(0);" class="review <%= @plan.under_review? ? 'active' : 'none' %>">Under Review</a></li>
      <li><a href="javascript:void(0);" class="review <%= @plan.revision_requested? ? 'active' : 'none' %>">Revision Requested</a></li>
      <% if @plan.provisionally_approved? %>
        <li><a href="javascript:void(0);" class="review active approved">Provisionally Approved</a></li>
      <% else %>
        <li><a href="javascript:void(0);" class="review <%= @plan.approved? ? 'active' : 'none' %> approved">Approved</a></li>
        <% end %>
    </ul>
  </div>
</div>

