<%= op.simple_fields_for :mobile_teams do |a| %>
<tr>
  <td><%= a.input :name, required: false, label: false %></td>
  <td><%= a.input :level, required: false, label: false, collection: ["ALS", "BLS"] %></td>
  <!-- 
  -->
  <td><%= a.input :provider_id,
                    collection: OrganizationType.find_providers,
                    label_method: :name,
                    value_method: :id,
                    include_blank: false,
                    prompt: "Select a provider",
                    required: false, label: false,
                    input_html: { class: "provider-dropdown" } %>
    <%= a.object.try(:provider_confirmation) %>
  </td>
  <td><a href="#" data-reveal-id="mobile_info">More Info</a></td>  
  
  <td><%= a.input :_destroy, as: :boolean, label: "Remove" %></td>
</tr>

<div id="mobile_info" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">More Info</h2>
  Type
  <%= a.input :mobile_team_type, required: false, label: false, collection: ["Foot", "Bike", "Gator/Cart"] %>
  AED <%= a.input :aed, input_html: {value: 0}, required: false, label: false %><br>
   
  Planning Contact Name
  <%= a.input :contact_name, required: false, label: false %><br>
  Planning Contact Phone
  <%= a.input :contact_phone, required: false, label: false %><br>
  Planning Contact Email
  <%= a.input :planning_contact_email, required: false, label: false %><br>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
<% end %>

