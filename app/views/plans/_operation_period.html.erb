<%= simple_fields_for :operation_period do |op| %>
  <div class="content operation-period-form" id="panel<%= count %>" data-url="<%= url_for([ @plan, :operation_periods ]) %>">
    <div class="row">
      <div class="small-2 columns input_label">
      <%= op.label :start_date, class: "inline", label: "START" %>
      </div>
      <div class="small-4 columns end">
        <%= op.input_field :start_date, label: false, placeholder: "Date", as: "string", class: "dateTimeSelect" %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns input_label">
      <%= op.label :end_date, class: "inline", label: "END" %>
      </div>
      <div class="small-4 columns end">
        <%= op.input_field :end_date, label: false, placeholder: "Date", as: "string", class: "dateTimeSelect" %>
      </div>
    </div>        
    <div class="row">
      <div class="small-2 columns input_label">
        <%= op.label :attendance, class: "inline" do %>
         Crowd Size
        <% end %>
      </div>
      <div class="small-4 columns end">
        <%= op.input :attendance, label: false %>
      </div>
    </div>
    <div class="row">
      <div class="small-4 columns small-offset-2">
        <%= link_to "Save", "javascript:void(0);", class: "button tiny radius save-operation-period" %>
      </div>
    </div>
  </div>
<% end %>
