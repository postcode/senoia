<% unique_id = SecureRandom.hex(16) %>

<div>
  <%= a.input "communications[#{unique_id}]", 
  collection: Communication.all,
  label_method: :name,
  value_method: :id,
  include_blank: false,
  prompt: "Select a communications type",
  label: false, required: false %>
</div>
<div>
  <%= a.input "communication_description[#{unique_id}]", required: false, label: 'Enter the radio frequency/channel or phone number' %>
</div>
