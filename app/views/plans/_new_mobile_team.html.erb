<%= op.simple_fields_for "mobile_teams[id][#{DateTime.now.to_i}]" do |f| %>
<tr>
  <td><%= f.input :name, required: false, label: false %></td>
  <td><%= f.input :location, required: false, label: false %></td>
  <td><%= f.input :level, required: false, label: false, collection: ["ALS", "BLS"] %></td>
  <td><%= f.input :type, required: false, label: false, collection: ["Foot", "Bike", "Gator/Cart"] %></td>
  <td><%= f.input :aed, label: "AEDs", input_html: {value: 0}, required: false, label: false %></td>
  <td><%= f.input :provider_id,
                    collection: Provider.all,
                    label_method: :name,
                    value_method: :id,
                    include_blank: false,
                    prompt: "Select a provider",
                    label: "Provider", required: false, label: false %></td>
  <td><%= f.input :contact_name, required: false, label: false %></td>
  <td><%= f.input :contact_phone, required: false, label: false %></td>
</tr>
<tr>
  <td>
    <div id='map_mobile_<%= DateTime.now.to_i %>' class="asset_map" style="width: 550px; height: 350px;"></div>
      <div id='lat_map_mobile_<%= DateTime.now.to_i %>'>
        <%= f.input :lat, input_html: { id: 'lat' }, as: :hidden  %>
      </div>
      <div id='lng_map_mobile_<%= DateTime.now.to_i %>'>
        <%= f.input :lng, input_html: { id: 'lng' }, as: :hidden %>
      </div>
  </td>
</tr> 

<script>
  $(document).ready(function(){
    gmap_form(null, 'map_mobile_<%= DateTime.now.to_i %>');    // form map for new view (print nothing with possibility of put marker)
  })
</script>
<% end %>
