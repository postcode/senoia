<% if plan.all_comments_resolved? %>
  <%= link_to [ plan, :events, event: "approve" ], class: "button large radius success", label: false, data: { confirm: "I know I know, just want to confirm that you are ready to approve this plan." }, method: :post do %>
    <i class="fi-check"></i> APPROVE PLAN
  <% end %>
<% else %>
  <p>
    All comments must be resolved before the plan can be approved.
  </p>
<% end %>
