<% op.transports.each do |transport| %>
<div class="row">
  <div class="large-12 columns">
    <h4><%= transport.name %></h4>
    <div class="large-4 columns">Provider
      <p><%= transport.provider.name unless transport.provider.blank? %></p>
    </div>
    <div class="large-4 columns end">
      <span><a href="#" data-reveal-id="first_aid_info">More Info</a></span>
    </div>
  </div>
</div>
<div id="first_aid_info" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">More Info</h2>
  Planning Contact Name
  <%= transport.contact_name %><br>
  Planning Contact Phone
  <%= transport.contact_phone %><br>
  Planning Contact Email
  <%= transport.planning_contact_email %><br>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
<% end %>
