<div class="row">
  <div class="large-12 columns pageTitle">
    <h1>Enter Plan Information</h1>
  </div>
  <%= render 'plan_state' %>
  <div class="large-12 columns plan_form">
    <%= simple_form_for [@plan] do |f| %>
      <% if @plan.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this department from being saved:</h2>
          <ul>
          <% @plan.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="small-3 columns input_label">
          <%= f.label :name, class: "inline", label: "Event Name" %>
        </div>
        <div class="small-5 columns end">
          <%= f.input :name, label: false %>  
        </div>
      </div>
      <div class="row">
        <div class="large-8 columns new-event-info">
          <h6>Event Plan Creator</h6>
          <p>CONTACT</p>            
          <p><i class="fi-torso"></i> John Doe</p>
          <p><i class="fi-mail"></i> john@example.gov</p>
          <p><i class="fi-telephone"></i> (123) 456-7890</p>     
        </div>
        <div class="large-3 columns end">
          <% if @plan.id.present? && !@plan.draft? %>
          <div id="attendance_comment" class="comment-section">
            <a href="#" class="comment">&nbsp;&nbsp;<i class="fi-comment"></i></a>
            <div class="new-comment-area">
              <label>Add A Comment:</label>
              <%= text_area(:attendance_comment, :text, cols: 10, rows: 5) %>
              <%= link_to "Add Comment", "#", class: "new-comment button primary tiny", :"data-href" => add_comment_plan_path(@plan) %>
            </div>
            <div class="existing-comments">
              <%= render partial: "existing_comments", locals: { plan: @plan, element_id: "attendance_comment_text" } %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="large-8 columns">
          <fieldset>
            <legend>Collaborators</legend>
             <%= simple_fields_for :users do |u| %>
              <div class="row">
                <div class="small-3 columns input_label">
                  <%= u.label "Email", class: "inline" %>
                </div>
                <div class="small-8 columns">
                  <%= u.input :email, label: false %>
                </div>
              </div>
              <div class="row">
                <a href="#" class="button small radius "><i class="fi-plus"></i> Add Editors</a>
              </div>
            <% end %>
          </fieldset>
        </div>
        <div class="large-3 columns end">
          <% if @plan.id.present? && !@plan.draft? %>
          <a href="#" class="comment">&nbsp;&nbsp;<i class="fi-comment"></i></a>
          <div id="attendance-comment" class="comment-area">
            <h6>Add A Comment</h6>
            <div class="modal-body">
              <label>Enter your comment:</label>
              <%= text_area(:attendance_comment, :text, cols: 20, rows: 5) %>
            </div>
            <div class="modal-footer">
              <%= link_to "Add Comment", add_comment_plan_path(@plan), id: "new-comment", class: "button primary", remote: true %> 
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="small-3 columns input_label">
          <%= f.label :event_type, class: "inline" %>
        </div>
        <div class="small-5 columns">
        <%= f.association :event_type,
                              collection: EventType.all,
                              label_method: :name,
                              value_method: :id,
                              include_blank: false,
                              label: false %>
        </div>
        <div class="large-1 columns end">
          <a href="#" class="comment" data-reveal-id="attendance-comment">&nbsp;&nbsp;<i class="fi-comment"></i></a>
        </div>
      </div>

      <div class="row">
        <div class="small-3 columns input_label">
          <%= f.label :permitter, class: "inline", label: "Permitting Agency" %>
        </div>
        <div class="small-5 columns">
        <%= f.association :permitter,
                            collection: Permitter.all,
                            label_method: :name,
                            value_method: :id,
                            include_blank: false,
                            label: false %>
        </div>
        <div class="large-1 columns end">
          <a href="#" class="comment" data-reveal-id="attendance-comment">&nbsp;&nbsp;<i class="fi-comment"></i></a>
        </div>
        <div class="large-3 columns end">
        </div>
      </div>
       <div class="row">
        <div class="small-3 columns input_label">
          <%= f.label :permitter, class: "inline", label: "Alcohol Present" %>
        </div>
        <div class="small-5 columns">
          <%= f.input :alcohol, label: "Yes" %>
        </div>
        <div class="large-1 columns end">
          <a href="#" class="comment" data-reveal-id="attendance-comment">&nbsp;&nbsp;<i class="fi-comment"></i></a>
        </div>
      </div>
      <hr/>

      <div class="row">
        <h3>Operational Period <span class="add_operation_period_button"><%= link_to add_operation_period_path(1), remote: true, class: "button primary tiny radius right", id: "new_operation_period"  do %> 
              <i class="fi-plus"></i> ADD OPERATIONAL PERIOD
            <% end %></span></h3>
      </div>

      <ul class="tabs" data-tab>
        <li class="tab-title active"><a href="#panel1">Operational Period 1</a></li>
      </ul>
      <div class="tabs-content">
        <%= render 'operation_period', count: 1 %>
      </div>

    <%= render 'plan_sidebar' %>

    <div class="large-12 columns text-center actions plan-action">
      <a href="#" class="button large warning radius"><i class="fi-check"></i> SAVE DRAFT</a>
      <%= f.submit "SUBMIT PLAN", class: "button large radius" %>
    </div>

    <% end %> 
  </div>
</div>