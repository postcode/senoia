<div class="row">
  <div class="row pageTitle with-margin">
    <div class="large-6 medium-4 columns">
      <h2>Venues</h2>
    </div>
    <div class="large-6 medium-4 columns">
      <%= link_to "New Venue", new_venue_path, class: "button primary" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 medium-12 small-12 columns">
    <%= grid(@venue_grid, show_filters: :when_filtered) do |g|
      g.column name: 'Name', attribute: 'name'
      g.column name: '' do |u|
        link_to 'Edit', edit_venue_path(u.id), class: 'button secondary tiny'
      end
    end -%>
  </div>
</div>
