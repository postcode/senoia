  <div class="row">
    <div class="small-12 columns">
      <h2>Asset Communication</h2>
      <% plan.operation_periods.each do |op| %>
        <h3>Operation Period:&nbsp;<%= op.formatted_start_date %>&nbsp;<%= op.formatted_start_time %></h3>
        <h4>First Aid Stations</h4>
        <% op.first_aid_stations.each do |asset| %>
          <h5><%= asset.name %></h5>
          <p>Communications:</p>
          <% asset.asset_communications.each do |comms| %>
            <p><%= comms.communication.name %></p>
            <p>Frequency or Phone Number: <%= comms.description %></p>
          <% end %>
        <% end %>
        <h4>Mobile Teams</h4>
        <% op.mobile_teams.each do |asset| %>
          <h5><%= asset.name %></h5>
          <p>Communications:</p>
          <% asset.asset_communications.each do |comms| %>
            <p><%= comms.communication.name %></p>
            <p>Frequency or Phone Number: <%= comms.description %></p>
          <% end %>
        <% end %>
        <h4>Dispatch</h4>
        <% op.dispatchs.each do |asset| %>
          <h5><%= asset.name %></h5>
          <p>Communications:</p>
          <% asset.asset_communications.each do |comms| %>
            <p><%= comms.communication.name %></p>
            <p>Frequency or Phone Number: <%= comms.description %></p>
          <% end %>
        <% end %>
        <h4>Transports</h4>
        <% op.transports.each do |asset| %>
          <h5><%= asset.name %></h5>
          <p>Communications:</p>
          <% asset.asset_communications.each do |comms| %>
            <p><%= comms.communication.name %></p>
            <p>Frequency or Phone Number: <%= comms.description %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

