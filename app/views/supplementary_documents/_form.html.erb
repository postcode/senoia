<div class="reveal-modal" data-reveal>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  <h3>Add Supplementary Document</h3>
  <div class="modal-body">
    <div class="document-form js-form", data-url="<%= url_for [ parent, :supplementary_documents ] %>">
      <%= simple_fields_for :supplementary_document, SupplementaryDocument.new do |f| %>
        <%= f.input :name, as: :string, label: "Document Name" %>
        <%= f.input :description %>
        <%= f.input :file, as: :file, label: "File", required: true %>
        <%= f.input :staff_contact, as: :hidden, input_html: { value: staff_file } %>
        <%= link_to "Save", "javascript:void(0);", class: "js-submit button tiny radius" %>
      <% end %>
    </div>
  </div>
</div>
