<div class="row spacing">
  <div class="large-12 columns">
    <h2>Sign Up</h2>
  </div>
  <div class="large-5 medium-7 small-9 columns end">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :email, required: true, input_html: { value: params[:email] } %>
        <%= f.input :phone_number, required: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class: 'button primary' %>
      </div>
    <% end %>
    <br>
    <p>Already have an account?
    <%= render "devise/shared/links" %></p>
  </div>
</div>
