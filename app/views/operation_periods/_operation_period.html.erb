<div class="content <%= "active" if count == 1 %> <%= "operation-period-#{operation_period.id}" %>" id="panel<%= count %>">
  <div class="large-12 columns card large">
    <div class="row">
      <h3>Operation Period <%= count %> Overview</h3>
      <hr/>
      <div class="large-4 columns">
        <h4>Time Period</h4>
         <div>Start
          <p><%= operation_period.formatted_start_date %> at <%= operation_period.formatted_start_time %></p>
         </div>
         <div>End
           <p><%= operation_period.formatted_end_date %> at <%= operation_period.formatted_end_time %></p>
         </div>
      </div>
      <div class="large-4 columns">
        <h4>Crowd</h4>
        <div>Peak Crowd Size
          <p><%= @plan.attendance %></p>
        </div>
        <div>Total Crowd Estimate
          <p><%= operation_period.crowd_estimate %></p>
        </div>
      </div>
      <div class="large-4 columns">
        <h4>Event Footprint</h4>
          <p><%= operation_period.location %></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="large-6 columns card medium">
        <h3>First Aid Stations&nbsp;(<%= operation_period.first_aid_stations.count %>)&nbsp;<i class="material-icons right md-48">local_hospital</i></h3>
        <%= render 'plans/first_aid_station/first_aid_station', op: operation_period, operation_period: operation_period %>
      </div>
      <div class="large-6 columns card medium end">
        <h3>Mobile Teams&nbsp;(<%= operation_period.mobile_teams.count %>)&nbsp;<i class="material-icons right md-48">directions_walk</i></h3>
          <%= render 'plans/mobile_team/mobile_team', op: operation_period, operation_period: operation_period %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="large-6 columns card medium">
        <h3>Transport&nbsp;(<%= operation_period.transports.count %>)&nbsp;<i class="material-icons right md-48">airport_shuttle</i></h3>
        <%= render 'plans/transport/transport', op: operation_period, operation_period: operation_period %>
      </div>
      <div class="large-6 columns card medium end">
        <h3>Dispatch&nbsp;(<%= operation_period.dispatchs.count %>)&nbsp;<i class="material-icons right md-48">mic</i></h3>
          <%= render 'plans/dispatch/dispatch', op: operation_period, operation_period: operation_period %>
      </div>
    </div>
  </div>
</div>
